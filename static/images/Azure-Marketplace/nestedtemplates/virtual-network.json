{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "vnetName": {
        "type": "string"
      },
      "existingVNet": {
        "type": "bool"
      },
      "resourceGroup": {
        "type": "string"
      },
      "location": {
        "type": "string"
      },
      "vnetPrefix": {
        "type": "string"
      },
      "subnetName": {
        "type": "string"
      },
      "subnetPrefix": {
        "type": "string"
      },
      "tags": {
          "type": "object"
      }
    },
    "variables" : {

      "location": "[parameters('location')]",

      "name": {
        "vnet": "[parameters('vnetName')]",
        "subnet": "[parameters('subnetName')]"
      },

      "network": {
        "existing": "[parameters('existingVNet')]",
        "prefix": {
          "vnet": "[parameters('vnetPrefix')]",
          "subnet": "[parameters('subnetPrefix')]"
        },
        "resourceGroup": "[if(parameters('existingVNet'), parameters('resourceGroup'), resourceGroup().name)]"
      },

      "tags": "[parameters('tags')]"
    },
    "resources": [
          {
              "apiVersion": "2019-09-01",
              "type": "Microsoft.Network/virtualNetworks",
              "name": "[variables('name').vnet]",
              "location": "[variables('location')]",
              "tags": "[variables('tags')]",
              "condition": "[not(variables('network').existing)]",
              "properties": {
                  "addressSpace": {
                      "addressPrefixes": [
                          "[variables('network').prefix.vnet]"
                      ]
                  },
                  "subnets": [
                      {
                          "name": "[variables('name').subnet]",
                          "properties": {
                              "addressPrefix": "[variables('network').prefix.subnet]"
                          }
                      }
                  ]
              }
          }
    ],
    "outputs": {
      "subnetRef": {
        "value": "[resourceId(variables('network').resourceGroup, 'Microsoft.Network/virtualNetworks/subnets', variables('name').vnet, variables('name').subnet)]",
        "type": "string"
      },
      "existingVNet": {
        "value": "[variables('network').existing]",
        "type": "bool"
      }
    }
  }
  